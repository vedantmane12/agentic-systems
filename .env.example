
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview  # or gpt-3.5-turbo for cost savings

# Serper API for Web Search
SERPER_API_KEY=your_serper_api_key_here

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True  # Set to False in production

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# CrewAI Configuration
CREW_VERBOSE=True  # Set to False to reduce logging
CREW_MAX_ITERATIONS=5
CREW_MEMORY_ENABLED=True

# Agent Configuration
AGENT_TEMPERATURE=0.7
AGENT_MAX_TOKENS=2000
AGENT_REQUEST_TIMEOUT=300  # seconds

# Tool Configuration
WEB_SEARCH_MAX_RESULTS=10
WEBSITE_SCRAPE_TIMEOUT=30  # seconds
MAX_CONTENT_LENGTH=10000  # characters

# Research Configuration
MAX_RESEARCH_TIME=600  # 10 minutes max per research task
ENABLE_CACHING=True
CACHE_EXPIRY=3600  # 1 hour

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or plain

# Optional: External Services
# REDIS_URL=redis://localhost:6379/0
# DATABASE_URL=postgresql://user:pass@localhost/dbname

# Optional: API Keys for additional tools
# WIKIPEDIA_API_KEY=your_wikipedia_api_key_here
# ARXIV_API_KEY=your_arxiv_api_key_here
# GOOGLE_SCHOLAR_API_KEY=your_google_scholar_api_key_here

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600  # 1 hour